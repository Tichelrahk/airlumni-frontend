/* pages/login/login.wxss */


.containerlogin{
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding-top: 600px;
}
.banner{
  height: 100vh;
  background-repeat: no-repeat;
  background-image: url(https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80);
  background-size: cover;
  background-position: center;
}

.btn-ghost {
  color: #4A4A4A;
  border: 2px solid #4A4A4A;
  padding: 8px 24px;
  border-radius: 50px;
  font-weight: heavy;
  opacity: 0.6;
  transition: opacity 0.3s ease;
  margin-bottom: 200px;
}

.btn-ghost:hover {
  opacity: 1;
}