/* pages/landing/landing.wxss */
.banner{
  height: 100vh;
  background-repeat: no-repeat;
  background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://www.codingworkshopsforkids.com.au/wp-content/uploads/2016/10/iStock_102589287_MEDIUM.jpg);
  background-size: cover;
  background-position: 50%;
}

.containerlanding {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding-top: 200rpx;
  box-sizing: border-box;
}

.btn-ghost {
  color: #4A4A4A;
  border: 2px solid #4A4A4A;
  border-radius: 50px;
  font-weight: heavy;
  opacity: 0.6;
  transition: opacity 0.3s ease;
  margin-bottom: 100px;
}

.btn-ghost:hover {
  opacity: 1;
}

.h1{
  color: whitesmoke;
  font-size: 30px;
  font-weight: bold;
}

.p{
  color: whitesmoke;
  font-size: 20px;
}



