.btn-ghost {
  color: #4A4A4A;
  border: 2px solid #4A4A4A;
  border-radius: 50px;
  font-weight: heavy;
  opacity: 0.6;
  transition: opacity 0.3s ease;
  margin-top: 125px;
}

.btn-ghost:hover {
  opacity: 1;
}

