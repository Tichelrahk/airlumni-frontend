<!--pages/show/show.wxml-->
<view class="header">View Profile</view>
<view class="contain">
  <view class="card">   
    <view class="card-info line"> 
      <image class="avatar" src="{{service.user.profile_picture}}"/>
      <view class="card-content">
        <view class="username">{{service.user.name}}</view>
        <view class="price">${{service.price}}</view>
      </view>
    </view>
    <view class="tag lbluebg">{{service.name}}</view>
  </view>

  <view class="description section">
    <view class="titleBio strong italic line">Bio</view>
    <view class="bioInfo">{{service.description}}</view>
  </view>
 
  <view class="availability section">
    <view class="titleAvailability strong italic line">Availability</view>
    <view class="calendar">days</view>
  </view>


  <view class="map section">
    <view class="titleMap strong italic line">Map</view>
    <view class="map">map goes here</view>
  </view>
<button bindtap="goToConfirm" class="btn orangebg">Book</button>
</view> 
