<!--pages/show/show.wxml-->
<view class="header">Service Profile</view>
<view class="contain">
  <view class="card pb">  
    <view class="dflex space-between pb"> 
      <view class="h2 no-grow dblue">{{service.name}}</view>
      <view class="price no-grow">${{service.price}}</view>
    </view>

    <view class="description pb">
      <view class="titleBio strong italic line pb">Description</view>
      <view class="descriptionInfo">{{service.description}}</view>
    </view> 
  </view>

  <view class="section">
    <view class="dflex"> 
      <image class="avatar" src="{{service.user.profile_picture}}"/>
      <view class="left-padding align-center">
        <view class="username">About {{service.user.name}}</view>
      </view>
    </view>
    <view class="bioInfo">{{service.user.description}}</view>
  </view>

<button bindtap="goToConfirm" data-id="{{service.id}}" class="btn orangebg">Book</button>


</view> 
