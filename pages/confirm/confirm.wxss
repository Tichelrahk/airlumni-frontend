.banner{
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
  background-color: #EFF0F1;
}

.time_form{
  display: flex;
  background-color: white;
  margin-bottom: 150px;
  border-radius: 5px;
  padding: 40rpx;
  width: 100%;
  box-sizing: border-box;
  justify-content: space-between;
} 
.time{
  margin: 40rpx;
}

.time_head{
  margin-bottom: 10px;
  color:rgba(255, 8, 0, 0.76);
}
picker{
  padding-top: 10px;
  opacity: .5;
}

picker:hover{
  opacity:1;
}

.userInfo{
  display: flex;
  flex-direction: column;
  align-items: center;
  
}
.code{
  color:rgba(255, 8, 0, 0.76);
  font-size:28px;
  font-weight: lighter;
}